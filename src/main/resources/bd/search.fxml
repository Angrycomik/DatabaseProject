                        </AnchorPane>
                    </content>
                  </ScrollPane>
                  <ScrollPane hbarPolicy="NEVER" prefHeight="200.0" prefWidth="300.0">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="200.0">
                           <children>
                              <VBox fx:id="songBox" layoutX="31.0" layoutY="-27.0" />
                           </children>
                        </AnchorPane>
                    </content>
                  </ScrollPane>
                  <ScrollPane hbarPolicy="NEVER" prefHeight="200.0" prefWidth="300.0">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="200.0">
                           <children>
                              <VBox fx:id="albumBox" />
                           </children>
                        </AnchorPane>
                    </content>
                  </ScrollPane>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
