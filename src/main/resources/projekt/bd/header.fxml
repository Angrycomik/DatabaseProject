<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER" prefHeight="100.0" spacing="60.0" styleClass="hboxback" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="projekt.bd.HeaderController">
   <children>
      <Pane prefHeight="130.0" prefWidth="355.0" />
      <Button fx:id="logoBtn" mnemonicParsing="false" onAction="#logoBtnClick" prefHeight="99.0" prefWidth="369.0" styleClass="logo" stylesheets="@style.css" text="MusicDB" textAlignment="CENTER">
         <font>
            <Font name="Bauhaus 93" size="72.0" />
         </font></Button>
      <AnchorPane prefHeight="130.0" prefWidth="330.0">
         <children>
            <HBox alignment="CENTER" focusTraversable="true" prefHeight="130.0" prefWidth="325.0">
               <children>
                  <Button alignment="CENTER" mnemonicParsing="false" onAction="#onImportClick" prefHeight="100.0" prefWidth="65.0" styleClass="headerbtn" stylesheets="@style.css" text="Import Song" textAlignment="CENTER" wrapText="true" />
                  <Button mnemonicParsing="false" onAction="#onSearchClick" prefHeight="100.0" prefWidth="65.0" styleClass="headerbtn" stylesheets="@style.css" text="Search" />
                  <Button fx:id="loginButton" mnemonicParsing="false" onAction="#login" prefHeight="100.0" prefWidth="65.0" styleClass="headerbtn" stylesheets="@style.css" text="Login" textAlignment="CENTER" />
                  <Button fx:id="signupButton" alignment="CENTER" mnemonicParsing="false" onAction="#signup" prefHeight="100.0" prefWidth="70.0" styleClass="headerbtn" stylesheets="@style.css" text="Sign Up" textAlignment="CENTER" />
               </children>
            </HBox>
         </children>
      </AnchorPane>
   </children>
</HBox>
